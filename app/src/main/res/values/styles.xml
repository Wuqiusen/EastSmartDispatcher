<resources>

    <style name="main_tab_bottom">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/main_tab_font</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/rb_main_tab_background</item>
        <item name="android:paddingBottom">@dimen/margin_tiny</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="scroll_bar_select_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@color/scroll_bar_bg</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="myEdt_style">
        <item name="android:background">@drawable/et_background</item>
        <item name="android:paddingLeft">@dimen/margin_fit</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="getCode_button_style">
        <item name="android:background">@drawable/bluebtn_getcode_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">@dimen/margin_tiny</item>
        <item name="android:paddingLeft">@dimen/margin_tiny</item>
    </style>

    <style name="blueBtn_style">
        <item name="android:background">@drawable/bluebtn_getcode_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">@dimen/margin_tiny</item>
        <item name="android:paddingLeft">@dimen/margin_tiny</item>
        <item name="android:layout_marginRight">@dimen/btn_margin</item>
        <item name="android:layout_marginLeft">@dimen/btn_margin</item>
    </style>

<!--操控台-->
    <!--操作栏字体-->
    <style name="titleBar_white_font_style">
        <item name="android:text">@null</item>
        <item name="android:textColor">@color/font_white</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="main_tab_font_style" parent="titleBar_white_font_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_mhuge</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <!--标题字体-->
    <style name="title_font_main_style">
        <item name="android:textSize">@dimen/font_xhuge</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textStyle">bold</item>
    </style>
   <!--信息字体-->
    <style name="content_car_font_main_style" parent="main_activity_top_button">
        <item name="android:text">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:minWidth">6dp</item>
        <item name="android:ellipsize">end</item>
    </style>
  <!--Dialog 弹出框-->
    <!--TitleText-->
    <style name="font_dialog_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/btn_height50</item>
        <item name="android:background">@color/title_bar_bg_style1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--EditText-->
    <style name="et_control_deck_dialog">
        <item name="android:layout_marginRight">@dimen/normal_margin10</item>
        <item name="android:layout_marginLeft">@dimen/normal_margin10</item>
        <item name="android:background">@drawable/et_background2</item>
        <item name="android:paddingLeft">@dimen/main_margin3</item>
        <item name="android:paddingRight">@dimen/main_margin3</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>
    <!--Button-->
    <style name="btn_dialog_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@drawable/btn_dialog_style</item>
        <item name="android:layout_marginTop">@dimen/normal_margin20</item>
        <item name="android:layout_marginLeft">@dimen/normal_margin10</item>
        <item name="android:layout_marginRight">@dimen/normal_margin10</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>
    <!--Dialog去除黑边框-->
    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--"查看"字体-->
    <style name="font_car_detail_dialog_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:gravity">right</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:minWidth">6dp</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:textColor">@color/font_black</item>
    </style>
    <!--RadioButton-->
    <style name="rb_bg_style">
        <item name="android:layout_width">@dimen/rb_width14</item>
        <item name="android:layout_height">@dimen/rb_height14</item>
        <item name="android:button">@null</item>
        <item name="android:text">@null</item>
        <item name="android:background">@drawable/radio_bg_style</item>
    </style>

<!--排班计划-->
    <!--标题类字体-->
    <style name="titleHead_scheduling_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/normal_margin10</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--信息类字体-->
    <style name="font_scheduling_body_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_gravity">left|center</item>
        <item name="android:text">@null</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--主站或副站类字体-->
    <style name="font_scheduling_station_style">
        <item name="android:text">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:layout_marginTop">@dimen/normal_margin10</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin10</item>
    </style>


    <!--非营运任务Dialog-->
    <style name="font_no_operation_dialog_style">
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textSize">@dimen/font_huge</item>
    </style>


