<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical">
        <!--已发车辆-->
        <LinearLayout
            android:id="@+id/ll_already_issued_car"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_already_start_cars"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--标题栏-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/main_activity_top_button"
                        android:layout_weight="2"
                        android:text="序号" />

                    <TextView
                        style="@style/main_activity_top_button"
                        android:layout_weight="7"
                        android:text="车号" />

                    <TextView
                        style="@style/main_activity_top_button"
                        android:layout_weight="4"
                        android:text="到站时刻" />

                    <TextView
                        style="@style/main_activity_top_button"
                        android:layout_weight="4"
                        android:text="计划时刻" />

                    <TextView
                        style="@style/main_activity_top_button"
                        android:layout_weight="3"
                        android:text="实际发车时刻" />

                    <TextView
                        style="@style/main_activity_top_button"
                        android:layout_weight="4"
                        android:text="发车间隔" />

                    <TextView
                        style="@style/main_activity_top_button"
                        android:layout_weight="3"
                        android:text="驾驶员" />

                    <TextView
                        android:id="@+id/tv_steward_gone"
                        style="@style/main_activity_top_button"
                        android:layout_weight="3"
                        android:text="乘务员"
                        android:visibility="gone" />

                    <TextView
                        style="@style/main_activity_top_button"
                        android:layout_weight="4"
                        android:text="指令内容" />

                    <TextView
                        style="@style/main_activity_top_button"
                        android:layout_weight="3"
                        android:text="正/异常" />

                    <TextView
                        style="@style/main_activity_top_button"
                        android:layout_weight="6"
                        android:text="备注" />

                    <TextView
                        style="@style/main_activity_top_button"
                        android:layout_weight="3"
                        android:text="操作" />

                    <TextView
                        android:id="@+id/textView"
                        style="@style/main_activity_top_button"
                        android:layout_weight="1"
                        android:text="指令反馈" />
                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/line_blue" />
                <!--已发车辆列表-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_gone_car"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/line_orange" />
        <!--待发车辆-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:visibility="visible">
            <!--待发车辆图标布局-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_gray5"
                android:minHeight="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/margin_fit_6"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/wait_car_icon"
                    android:drawablePadding="2dp"
                    android:paddingLeft="@dimen/margin_tiny"
                    android:text="待发车辆"

                    android:textColor="@color/font_blue3"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/normal_margin20"
                    android:orientation="horizontal">
                    <!--手动发车-->
                    <TextView
                        android:id="@+id/tv_manual"
                        style="@style/btn_send_car_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tv_manual_normal_style"
                        android:gravity="center"
                        android:minHeight="28dp"
                        android:minWidth="60dp"
                        android:text="手动发车" />
                    <!--自动发车-->
                    <TextView
                        android:id="@+id/tv_automatic"
                        style="@style/btn_send_car_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tv_manual_unnormal_style"
                        android:gravity="center"
                        android:minHeight="28dp"
                        android:minWidth="60dp"
                        android:text="自动发车" />

                </LinearLayout>
            </LinearLayout>

            <!--标题栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:layout_marginRight="@dimen/margin_tiny"
                android:gravity="center"
                android:minHeight="40dp">

                <TextView
                    style="@style/main_activity_top_button"
                    android:layout_weight="2.8"
                    android:text="序号" />

                <TextView
                    style="@style/main_activity_top_button"
                    android:layout_weight="15"
                    android:text="车号" />

                <TextView
                    style="@style/main_activity_top_button"
                    android:layout_weight="4.8"
                    android:text="到站时刻" />

                <TextView
                    style="@style/main_activity_top_button"
                    android:layout_weight="3"
                    android:text="计划时刻" />

                <TextView
                    style="@style/main_activity_top_button"
                    android:layout_weight="3"
                    android:text="停场时间" />

                <TextView
                    style="@style/main_activity_top_button"
                    android:layout_weight="3"
                    android:text="发车间隔" />

                <TextView
                    style="@style/main_activity_top_button"
                    android:layout_weight="3"
                    android:text="单/双班" />

                <TextView
                    style="@style/main_activity_top_button"
                    android:layout_weight="3"
                    android:text="驾驶员" />

                <TextView
                    android:id="@+id/tv_steward_send"
                    style="@style/main_activity_top_button"
                    android:layout_weight="3"
                    android:text="乘务员"
                    android:visibility="visible" />

                <!--应跑单次-->
                <TextView
                    style="@style/main_activity_top_button"
                    android:layout_weight="3"
                    android:text="应跑单次" />

                <!--实跑单次-->
                <TextView
                    style="@style/main_activity_top_button"
                    android:layout_weight="3"
                    android:text="实跑单次" />

                <!--归属站-->
                <TextView
                    style="@style/main_activity_top_button"
                    android:layout_weight="5"
                    android:text="归属站" />

                <TextView
                    style="@style/main_activity_top_button"
                    android:layout_weight="4"
                    android:text="指令内容" />

                <TextView
                    style="@style/main_activity_top_button"
                    android:layout_weight="3"
                    android:text="非运营任务" />


                <TextView
                    style="@style/main_activity_top_button"
                    android:layout_weight="6"
                    android:text="操作" />

            </LinearLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:layout_marginRight="@dimen/margin_tiny"
                android:background="@color/line_blue" />
            <!--<include layout="@layout/item_car"/>-->
            <!--待发车辆列表-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:layout_marginRight="@dimen/margin_tiny"
                android:layout_weight="1">

                <com.zxw.dispatch.view.DragListView
                    android:id="@+id/lv_send_car"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:descendantFocusability="blocksDescendants" />
                <!--新增的界面缺省-->
                <View
                    android:id="@+id/view_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#55e1dada"
                    android:clickable="true"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/line_blue2"
        />
    <!--停场车辆-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:background="@color/background_gray5"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_stop_home"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_fit_6"
                android:drawableLeft="@mipmap/stop_car_icon"
                android:drawablePadding="2dp"
                android:paddingLeft="@dimen/margin_tiny"

                android:text="停场车辆"
                android:textColor="@color/font_blue3"
                android:textSize="@dimen/font_large"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/normal_margin10"
                android:layout_weight="0.24"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!--单班主站-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height12"
                    android:background="@drawable/ll_stop_car_red_btn_bg"
                    android:minWidth="25dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/margin_tiny"
                    android:paddingRight="@dimen/margin_tiny"
                    android:textSize="@dimen/font_tiny"
                    android:textColor="@color/font_blue"
                    android:text="本站"
                   />

                <!--单班副站-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height12"
                    android:background="@drawable/ll_stop_car_green_btn_bg"
                    android:minWidth="25dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/margin_tiny"
                    android:textSize="@dimen/font_tiny"
                    android:textColor="@color/font_blue"
                    android:text="对站"
                     />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/background_gray4"
            android:visibility="gone"/>
        <!--停场车辆列表-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_stop_car"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/margin_fit_6"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny" />
    </LinearLayout>


</LinearLayout>