<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_tiny"
    android:layout_marginRight="@dimen/margin_tiny"
    android:background="@color/transparent"
    android:orientation="vertical" >
    <!--WaitCar_Tab-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_hor_wtab1"
            style="@style/font_menu3"
            android:background="@drawable/btn_login_style"
            android:text="线路营运"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/tv_hor_wtab2"
            style="@style/font_menu3"
            android:background="@drawable/whitebtn_dialog_deep_style"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/font_black"
            android:text="营运空驶"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/tv_hor_wtab3"
            style="@style/font_menu"
            android:textSize="@dimen/font_medium"
            android:visibility="visible"
            android:text="Tab3"
            />
    </LinearLayout>
    <!--WaitCat_Title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="40dp">
        <TextView
            style="@style/main_activity_top_button"
            android:layout_weight="2.8"
            android:text="序号" />

        <TextView
            style="@style/main_activity_top_button"
            android:layout_weight="8"
            android:text="车号" />

        <TextView
            style="@style/main_activity_top_button"
            android:layout_weight="4"
            android:text="到站时刻" />

        <TextView
            style="@style/main_activity_top_button"
            android:layout_weight="3"
            android:text="计划时刻" />
        <!--停场时间-->
        <!--<TextView-->
        <!--style="@style/main_activity_top_button"-->
        <!--android:layout_weight="3"-->
        <!--android:text="停场时间" />-->

        <TextView
            style="@style/main_activity_top_button"
            android:layout_weight="3"
            android:text="发车间隔" />

        <TextView
            style="@style/main_activity_top_button"
            android:layout_weight="3"
            android:text="单/双班" />

        <TextView
            style="@style/main_activity_top_button"
            android:layout_weight="3"
            android:text="驾驶员" />

        <TextView
            android:id="@+id/tv_steward_send"
            style="@style/main_activity_top_button"
            android:layout_weight="3"
            android:text="乘务员"
            android:visibility="gone" />

        <!--应跑单次-->
        <TextView
            style="@style/main_activity_top_button"
            android:layout_weight="3"
            android:text="应跑单次" />

        <!--实跑单次-->
        <TextView
            style="@style/main_activity_top_button"
            android:layout_weight="3"
            android:text="实跑单次" />

        <!--归属站-->
        <TextView
            style="@style/main_activity_top_button"
            android:layout_weight="5"
            android:text="归属站" />

        <TextView
            style="@style/main_activity_top_button"
            android:layout_weight="4"
            android:text="指令内容" />

        <TextView
            style="@style/main_activity_top_button"
            android:layout_weight="3"
            android:text="非运营任务" />


        <TextView
            style="@style/main_activity_top_button"
            android:layout_weight="6"
            android:text="操作" />

    </LinearLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_blue" />

    <com.zxw.dispatch.view.CustomViewPager
        android:id="@+id/vp_wait_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>