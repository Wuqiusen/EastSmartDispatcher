<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_setting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/font_blue3"
    android:minHeight="50dp"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/img_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_margin10"
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/main_margin6"
        android:layout_marginRight="@dimen/normal_margin10"
        android:text=""
        android:textSize="@dimen/font_medium"
        android:textColor="@color/white"
        />
</LinearLayout>