<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@color/background_deep_blue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="130dp"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">

        <TextView
            android:id="@+id/tv_line_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="777"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large"
            />
        <TextView
            android:id="@+id/tv_time_to_send_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            tools:text="0è¾†"
            android:text=""
            />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_main_tag"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="99"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_fit_6"
            android:layout_marginRight="@dimen/margin_fit_6"
            android:background="@drawable/main_tag_bg"
            android:textStyle="bold"
            android:gravity="center"/>
</RelativeLayout>