<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="40dp"
    >
    <!--数据Item_已发车辆/线路运营-->
    <TextView
        style="@style/font_item_xml_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="序号"
        />

    <TextView
        style="@style/font_item_xml_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:text="车号"
        />

    <TextView
        style="@style/font_item_xml_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="到站时刻"
        />

    <TextView
        style="@style/font_item_xml_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="计划时刻"
        />

    <TextView
        style="@style/font_item_xml_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:text="实际发车时刻"
        />

    <TextView
        style="@style/font_item_xml_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="停场时间"
        />

    <TextView
        style="@style/font_item_xml_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="发车间隔"
        />

    <TextView
        style="@style/font_item_xml_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="驾驶员"
        />

    <TextView
        style="@style/font_item_xml_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="乘务员"
        android:visibility="gone"
        />

    <TextView
        style="@style/font_item_xml_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="指令内容" />

    <TextView
        style="@style/font_item_xml_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="正/异常"
        />

    <TextView
        style="@style/font_item_xml_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="备注"
        />

    <TextView
        style="@style/font_item_xml_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="操作"
        />

    <TextView
        style="@style/font_item_xml_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="指令反馈"
        />

</LinearLayout>