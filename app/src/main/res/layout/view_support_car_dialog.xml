<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    >
    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_car_dialog"
        android:orientation="vertical">
        <TextView
            style="@style/title_font_dialog_style"
            android:text="支援"
            />
        <View style="@style/line_title_bottom_dialog"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dialog_margin20"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.6"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                style="@style/font_dialog_deputy_style"
                android:text="支援线路: "
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="360dp"
                    android:layout_height="48dp"
                    style="@style/et_control_deck_dialog"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:hint="模糊查询"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_margin20"
            android:layout_marginRight="@dimen/normal_margin20"
            android:layout_marginBottom="@dimen/dialog_margin30"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.6"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                style="@style/font_dialog_deputy_style"
                android:text="支援时间: "
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxLength="8"
                    style="@style/et_control_deck_dialog"
                    android:drawableRight="@mipmap/img_calendar"
                    android:hint="模糊查询"

                    />
                <View
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/font_black"/>
                <EditText
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxLength="8"
                    style="@style/et_control_deck_dialog"
                    android:drawableRight="@mipmap/img_calendar"
                    android:hint="模糊查询"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_confirm"
                style="@style/bluebtn_dialog_style"
                android:text="确定"
                />
            <Button
                android:id="@+id/btn_cancel"
                style="@style/whitebtn_dialog_style"
                android:text="取消"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
