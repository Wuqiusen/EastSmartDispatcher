<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_bg_gray"
    android:orientation="vertical">
  <!--头部-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/title_bar_bg_style1"
        android:orientation="horizontal">
       <!--标题栏: 左边部分-->
       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/normal_margin10"
           android:layout_gravity="center_vertical"
           >

           <TextView
               android:id="@+id/tv_user_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:drawableLeft="@drawable/my_icon"
               android:gravity="center_vertical"
               android:drawablePadding="@dimen/normal_margin10"
               tools:text="李兰"
               style="@style/titleBar_white_font_style"
                />
           <TextView
               android:id="@+id/tv_system_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="@dimen/normal_margin10"
               tools:text="2017-2-15"
               style="@style/titleBar_white_font_style"
               />
       </LinearLayout>
       <!--标题栏: 中间部分-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ll_login_msg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img_setup"
            android:orientation="horizontal"
            >
            <!--操控台-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin10"
                >
                <TextView
                    android:id="@+id/tv_controller"
                    style="@style/main_tab_font_style"
                    android:text="操控台"
                    />

                <View
                    android:id="@+id/line_control"
                    style="@style/scroll_bar_select_style"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <!--排班计划-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin10"
                >
                <TextView
                    android:id="@+id/tv_schedule"
                    style="@style/main_tab_font_style"
                    android:text="排班计划"
                    />
                <View
                    android:id="@+id/line_schedule"
                    style="@style/scroll_bar_select_style"
                    android:visibility="gone"/>
            </RelativeLayout>

            <!--维修计划-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin10"
                >
                <TextView
                    android:id="@+id/tv_fix"
                    style="@style/main_tab_font_style"
                    android:text="非营运任务"
                    />
                <View style="@style/scroll_bar_select_style"
                      android:visibility="gone"/>
            </RelativeLayout>

            <!--线路运行图-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin10"
                >
                <TextView
                    android:id="@+id/tv_line_map"
                    style="@style/main_tab_font_style"
                    android:text="线路运行图"
                    />
                <View style="@style/scroll_bar_select_style"
                      android:visibility="gone"/>
            </RelativeLayout>

            <!--作业计划-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin10"
                >
                <TextView
                    android:id="@+id/tv_refuel"
                    style="@style/main_tab_font_style"
                    android:text="作业计划"
                    />
                <View style="@style/scroll_bar_select_style"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5">
            <ImageView
                android:id="@+id/img_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/normal_margin10"
                android:layout_marginRight="@dimen/normal_margin10"
                android:src="@drawable/setup_icon"
                />
        </RelativeLayout>

    </LinearLayout>
  <!--主体-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
      <!--左边部分-->
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="0.7"
          android:layout_height="match_parent"
          android:background="@color/title_bar_bg_style1"
          android:orientation="vertical"
          android:layout_marginTop="1dp">
          <android.support.v7.widget.RecyclerView
              android:id="@+id/rv_line"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"/>

          <ImageView
              android:id="@+id/img_login_out"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginBottom="30dp"
              android:src="@drawable/login_out_icon" />
      </LinearLayout>
      <!--中间部分-->
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="9"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <com.zxw.dispatch.view.CustomViewPager
              android:id="@+id/vp_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
          />
      </LinearLayout>
  </LinearLayout>
</LinearLayout>