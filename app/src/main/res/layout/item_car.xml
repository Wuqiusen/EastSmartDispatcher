<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_car_sequence"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="1"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/tv_car_code"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="粤B03444"
        android:layout_weight="4"/>

    <TextView
        android:id="@+id/tv_plan_time"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="7:00"
        android:layout_weight="4"/>

    <TextView
        android:id="@+id/tv_system_enter_time"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="30min"
        android:layout_weight="4"/>

    <TextView

        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="15min"
        android:layout_weight="4"/>

    <TextView
        android:id="@+id/tv_interval_time"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="7:00"
        android:layout_weight="4"/>

    <TextView
        android:id="@+id/tv_send_time"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="7:00"
        android:layout_weight="6"/>

    <TextView
        android:id="@+id/tv_driver"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="张三"
        android:layout_weight="3"/>

    <TextView
        android:id="@+id/tv_trainman"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="李华"
        android:layout_weight="3"/>

    <TextView
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="单班"
        android:layout_weight="3.5"/>

    <TextView
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="10dp"
        tools:text="主站"
        android:layout_weight="3.5"/>

    <TextView
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="正在运营"
        android:layout_weight="4"/>

    <TextView
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="小修"
        android:layout_weight="5"/>

    <TextView
        android:id="@+id/tv_send_car"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:clickable="true"
        android:minWidth="6dp"
        android:text="发车"
        android:textColor="@color/main_tab_font"
        android:layout_weight="2"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minWidth="6dp"
        android:src="@drawable/feedback_icon"
        android:layout_weight="4"/>

</LinearLayout>