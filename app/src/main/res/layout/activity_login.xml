<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.zxw.dispatch.ui.LoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!--账号:000000-->
    <EditText
        android:id="@+id/et_username"
        style="@style/et_login_style"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/phone_user_icon"
        android:hint="用户名"
        android:text="000000"
        />
    <!--密码:123456-->
    <EditText
        android:id="@+id/et_password"
        style="@style/et_login_style"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/password_user_icon"
        android:hint="输入密码"
        android:text="123456"
        />
     <RelativeLayout
         android:layout_width="500dp"
         android:layout_height="wrap_content"
         android:minHeight="@dimen/login_height40"
         android:layout_margin="@dimen/normal_margin10"
         android:orientation="horizontal">
         <CheckBox
             style="@style/cb_bg_style"
             android:layout_toLeftOf="@+id/tv_remember_pwd"
             />
         <TextView
             android:id="@+id/tv_remember_pwd"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="@dimen/normal_margin20"
             android:textColor="@color/font_black"
             android:text="记住密码"/>
     </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/login_height55"
        android:background="@drawable/btn_login_style"
        android:text="登录"
        android:textSize="@dimen/font_xlarge"
        android:textColor="@color/font_white"/>

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_fit"
        android:layout_marginTop="@dimen/margin_small"
        android:text="忘记密码？"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_medium"
        />


</LinearLayout>
