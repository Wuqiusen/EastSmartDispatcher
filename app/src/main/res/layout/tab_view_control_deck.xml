<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <!--<TextView-->
        <!--android:id="@+id/tv_already_issued_car"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:minHeight="50dp"-->
        <!--android:drawableLeft="@mipmap/start_car_icon"-->
        <!--android:gravity="center_vertical"-->
        <!--android:paddingLeft="4dp"-->
        <!--android:drawablePadding="2dp"-->
        <!--android:text="已发车辆"-->
        <!--android:textColor="@color/font_navy_blue"-->
        <!--android:textSize="@dimen/font_large"-->
        <!--android:textStyle="bold" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_bg_shallow_blue"
        android:minHeight="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_already_issued_car"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/start_car_icon"
            android:layout_marginLeft="@dimen/margin_fit_6"
            android:paddingLeft="@dimen/margin_tiny"
            android:text="已发车辆"
            android:textColor="@color/font_navy_blue"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/img_narrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/normal_margin20"
            android:src="@mipmap/narrow_icon"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical">
        <!--已发车辆-->
        <LinearLayout
            android:id="@+id/ll_already_issued_car"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/ll_already_start_cars"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--标题栏-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/main_activity_top_button"
                        android:text="序号"
                        android:layout_weight="2"/>

                    <TextView
                        style="@style/main_activity_top_button"
                        android:text="车号"
                        android:layout_weight="7"/>

                    <TextView
                        style="@style/main_activity_top_button"
                        android:text="到站时刻"
                        android:layout_weight="4"/>

                    <TextView
                        style="@style/main_activity_top_button"
                        android:text="计划时刻"
                        android:layout_weight="4"/>

                    <TextView
                        style="@style/main_activity_top_button"
                        android:text="实际发车时刻"
                        android:layout_weight="3"/>

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/main_activity_top_button"
                        android:text="发车间隔"
                        android:layout_weight="4"/>

                    <TextView
                        style="@style/main_activity_top_button"
                        android:text="驾驶员"
                        android:layout_weight="3"/>

                    <TextView
                        android:id="@+id/tv_steward_gone"
                        style="@style/main_activity_top_button"
                        android:text="乘务员"
                        android:layout_weight="3"
                        android:visibility="gone"/>

                    <TextView
                        style="@style/main_activity_top_button"
                        android:text="任务类型"
                        android:layout_weight="4"/>

                    <TextView
                        style="@style/main_activity_top_button"
                        android:text="正/异常"
                        android:layout_weight="3"/>

                    <TextView
                        style="@style/main_activity_top_button"
                        android:text="备注"
                        android:layout_weight="6"/>

                    <TextView
                        style="@style/main_activity_top_button"
                        android:text="操作"
                        android:layout_weight="3"/>

                    <TextView
                        style="@style/main_activity_top_button"
                        android:text="指令反馈"
                        android:layout_weight="1"
                        android:id="@+id/textView" />
                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/line_level_bg" />
                <!--已发车辆列表-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_gone_car"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/line_level_bg1" />
        <!--待发车辆-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:visibility="visible"
            >
            <!--待发车辆图标布局-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@color/background_bg_shallow_blue"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/wait_car_icon"
                    android:layout_marginLeft="@dimen/margin_fit_6"
                    android:paddingLeft="@dimen/margin_tiny"
                    android:layout_gravity="left|center_vertical"
                    android:drawablePadding="2dp"
                    android:text="待发车辆"

                    android:textColor="@color/font_navy_blue"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/normal_margin20"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                    <!--手动发车-->
                    <TextView
                        android:id="@+id/tv_manual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="@drawable/tv_manual_normal_style"
                        android:text="手动发车"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_tiny" />
                    <!--自动发车-->
                    <TextView
                        android:id="@+id/tv_automatic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="@drawable/blackbtn_startcar_style"
                        android:text="自动发车"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_tiny" />

                </LinearLayout>
            </LinearLayout>

            <!--标题栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:layout_marginRight="@dimen/margin_tiny"
                android:gravity="center">

                <TextView
                    style="@style/main_activity_top_button"
                    android:text="序号"
                    android:layout_weight="2.8" />

                <TextView
                    style="@style/main_activity_top_button"
                    android:text="车号"
                    android:layout_weight="15"/>

                <TextView
                    style="@style/main_activity_top_button"
                    android:text="到站时刻"
                    android:layout_weight="4.8"/>

                <TextView
                    style="@style/main_activity_top_button"
                    android:text="计划时刻"
                    android:layout_weight="3"/>

                <TextView
                    style="@style/main_activity_top_button"
                    android:text="停场时间"
                    android:layout_weight="3"/>

                <TextView
                    style="@style/main_activity_top_button"
                    android:text="发车间隔"
                    android:layout_weight="3"/>

                <TextView
                    style="@style/main_activity_top_button"
                    android:text="单/双班"
                    android:layout_weight="3"/>

                <TextView
                    style="@style/main_activity_top_button"
                    android:text="驾驶员"
                    android:layout_weight="3"/>
                <TextView
                    android:id="@+id/tv_steward_send"
                    style="@style/main_activity_top_button"
                    android:text="乘务员"
                    android:layout_weight="3"
                    android:visibility="visible"/>

                <!--应跑单次-->
                <TextView
                    style="@style/main_activity_top_button"
                    android:text="应跑单次"
                    android:layout_weight="3"/>

                <!--实跑单次-->
                <TextView
                    style="@style/main_activity_top_button"
                    android:text="实跑单次"
                    android:layout_weight="3"/>

                <!--归属站-->
                <TextView
                    style="@style/main_activity_top_button"
                    android:text="归属站"
                    android:layout_weight="4"/>

                <TextView
                    style="@style/main_activity_top_button"
                    android:text="任务类型"
                    android:layout_weight="4"/>

                <TextView
                    style="@style/main_activity_top_button"
                    android:text="非运营任务"
                    android:layout_weight="4"/>


                <TextView
                    style="@style/main_activity_top_button"
                    android:text="操作"
                    android:layout_weight="6"/>

            </LinearLayout>
            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:layout_marginRight="@dimen/margin_tiny"
                android:background="@color/line_level_bg" />
            <!--待发车辆列表-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:layout_marginRight="@dimen/margin_tiny"
                android:layout_weight="1">
                <com.zxw.dispatch.view.DragListView
                    android:id="@+id/lv_send_car"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                  />
                <View
                    android:id="@+id/view_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#55e1dada"
                    android:clickable="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/line_level_bg2"
        />
    <!--停场车辆-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:background="@color/background_bg_shallow_blue"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_stop_home"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_fit_6"
                android:drawableLeft="@mipmap/stop_car_icon"
                android:drawablePadding="2dp"
                android:paddingLeft="@dimen/margin_tiny"

                android:text="停场车辆"
                android:textColor="@color/font_navy_blue"
                android:textSize="@dimen/font_large"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/normal_margin10"
                android:layout_weight="0.24"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!--单班主站-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height12"
                    android:background="@drawable/ll_stop_car_red_btn_bg"
                    android:minWidth="25dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/margin_tiny"
                    android:paddingRight="@dimen/margin_tiny"
                    android:textSize="@dimen/font_tiny"
                    android:textColor="@color/font_blue"
                    android:text="本站"
                   />

                <!--单班副站-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height12"
                    android:background="@drawable/ll_stop_car_green_btn_bg"
                    android:minWidth="25dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/margin_tiny"
                    android:textSize="@dimen/font_tiny"
                    android:textColor="@color/font_blue"
                    android:text="对站"
                     />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/gray_color"
            android:visibility="gone"/>
        <!--停场车辆列表-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_stop_car"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/margin_fit_6"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny" />
    </LinearLayout>


</LinearLayout>