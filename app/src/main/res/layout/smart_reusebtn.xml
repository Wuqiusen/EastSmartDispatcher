<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="20dp"
    android:minWidth="30dp"
    android:layout_margin="6dp"
    android:background="@drawable/ll_stop_car_green_btn_bg"
    android:orientation="vertical"
    >

    <!--该布局id：ll_1-->
     <!--ll_1显示,ll_2隐藏，则获取"红、蓝或绿色的单层大按钮"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:minHeight="16dp"
        android:minWidth="26dp"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:minWidth="80dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="粤"
            android:textColor="@color/white"
            android:textSize="@dimen/font_min_size"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_car_code1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:minWidth="80dp"
            android:gravity="center"
            android:text="B1222"
            android:textColor="@color/white"
            android:textSize="@dimen/font_min_size"
            android:visibility="visible"
            />
    </LinearLayout>
    <!--该布局id：ll_2-->
     <!--ll_1隐藏,ll_2隐藏，则获取"红、蓝或绿色的单层小按钮"-->
     <!--ll_1隐藏,ll_2显示，则获取"红、蓝或绿色的双层大按钮"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:minHeight="16dp"
        android:minWidth="26dp"
        android:background="@drawable/ll_stop_car_green_btn_bg"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:minWidth="80dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="粤"
            android:textColor="@color/white"
            android:textSize="@dimen/font_min_size"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_car_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:minWidth="80dp"
            android:gravity="center"
            android:text="B1222"
            android:textColor="@color/white"
            android:textSize="@dimen/font_min_size"
            android:visibility="visible"
           />
    </LinearLayout>


</LinearLayout>