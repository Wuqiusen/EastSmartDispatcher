<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_tiny"
    android:layout_marginRight="@dimen/margin_tiny"
    android:background="@color/transparent"
    android:orientation="vertical" >
    <!--WaitCar_Tab-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_hor_stop_tab1"
                style="@style/font_menu3"
                android:background="@drawable/btn_login_style"
                android:text="待班车辆"
                android:visibility="visible"
                />
            <TextView
                android:id="@+id/tv_hor_stop_tab2"
                style="@style/font_menu3"
                android:background="@drawable/whitebtn_dialog_deep_style"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/font_black"
                android:text="收班车辆"
                android:visibility="visible"
                />
        </LinearLayout>
        <!--停场车辆-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/normal_margin20"
            android:minHeight="48dp"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--单班主站-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height12"
                android:background="@drawable/ll_stop_car_red_btn_bg"
                android:minWidth="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_tiny"
                android:paddingRight="@dimen/normal_margin10"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/font_blue"
                android:text="本站"
                />

            <!--单班副站-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height12"
                android:background="@drawable/ll_stop_car_green_btn_bg"
                android:minWidth="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_tiny"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/font_blue"
                android:text="对站"
                />
        </LinearLayout>
    </LinearLayout>


    <com.zxw.dispatch.view.ChildViewPager
        android:id="@+id/vp_stop_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />

</LinearLayout>