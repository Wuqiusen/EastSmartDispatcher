<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="50dp">
<TextView
    android:text="序号"
    style="@style/head_plan_style1"/>
<TextView
    android:text="发车时间"
    style="@style/head_plan_style1"/>
<TextView
    android:text="车牌号"
    style="@style/head_plan_style1"/>
<TextView
    android:text="单双班"
    style="@style/head_plan_style1"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">
        <TextView
            android:text="人员"
            style="@style/head_plan_style2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:text="上班时间"
                style="@style/head_plan_style1"/>
            <TextView
                android:text="驾驶员"
                style="@style/head_plan_style1"/>

            <TextView
                android:text="乘务员"
                style="@style/head_plan_style1"/>

            <TextView
                android:text="单次"
                style="@style/head_plan_style1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:text="换车"
            style="@style/head_plan_style2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:text="车牌号"
                style="@style/head_plan_style1"/>
            <TextView
                android:text="单次"
                style="@style/head_plan_style1"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>