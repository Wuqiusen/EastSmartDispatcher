<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_base_headArea"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/rl_base_head_title"
        android:layout_width="match_parent"
        android:layout_height="66dp">
        <Button
            android:id="@+id/btn_base_head_back"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/head_height"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:drawableLeft="@mipmap/fanhui"
            android:text=""
            android:textSize="@dimen/font_medium"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/btn_base_head_left_imgbutton"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/head_height"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:src="@mipmap/btn_head_back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_base_head_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/font_xhuge"
            android:textStyle="bold"
            android:textColor="@color/font_black" />
        <Button
            android:id="@+id/btn_base_head_right_button"
            android:layout_width="wrap_content"
            android:minWidth="48dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/font_medium"
            android:text="编辑"
            android:paddingRight="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_small"
            android:background="@color/transparent"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />


        <ImageButton
            android:id="@+id/btn_base_head_right_imgbutton"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/head_height"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:paddingRight="@dimen/margin_small"
            android:layout_alignParentRight="true"
            android:visibility="gone" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/info_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_date"
            style="@style/page_top_tv_style"
            tools:text="日期：2016年9月28日"/>
        <TextView
            android:id="@+id/tv_line_no"
            style="@style/page_top_tv_style"
            tools:text="线路编号：M214"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_user"
                style="@style/page_top_tv_style"
                tools:text="调度员：王五"/>
            <TextView
                android:id="@+id/tv_weather"
                style="@style/page_top_tv_style"
                tools:text="天气：晴"/>
            <RadioGroup
                android:id="@+id/rg_depart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginRight="8dp">
                <RadioButton
                    android:id="@+id/rb_automatic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="自动发车"/>
                <RadioButton
                    android:id="@+id/rb_manual"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="手动发车"/>
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2px"
        android:background="@color/background_gray2"
        android:layout_alignParentBottom="true"/>
</LinearLayout>

