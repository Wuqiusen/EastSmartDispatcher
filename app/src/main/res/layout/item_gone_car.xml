<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
 <!--已发车辆-->
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@color/transparent"
     android:layout_marginLeft="@dimen/normal_margin10"
     android:layout_marginRight="@dimen/normal_margin10"
     android:minHeight="40dp"
     android:gravity="center"
     android:orientation="horizontal">
     <TextView
         style="@style/main_activity_top_button"
         android:text="序号"
         android:layout_weight="2"/>

     <TextView
         style="@style/main_activity_top_button"
         android:text="车号"
         android:layout_weight="8"/>

     <TextView
         style="@style/main_activity_top_button"
         android:text="到站时刻"
         android:layout_weight="4"/>

     <TextView
         style="@style/main_activity_top_button"
         android:text="计划时刻"
         android:layout_weight="4"/>

     <TextView
         style="@style/main_activity_top_button"
         android:text="实际发车时刻"
         android:layout_weight="3"/>
     <!--新增:停场时间-->
     <TextView
         style="@style/main_activity_top_button"
         android:text="停场时间"
         android:layout_weight="3"/>

     <TextView
         style="@style/main_activity_top_button"
         android:text="发车间隔"
         android:layout_weight="4"/>

     <TextView
         style="@style/main_activity_top_button"
         android:text="驾驶员"
         android:layout_weight="3"/>

     <TextView
         android:id="@+id/tv_menu_steward_gone"
         style="@style/main_activity_top_button"
         android:text="乘务员"
         android:layout_weight="3"
         android:visibility="gone"/>

     <TextView
         style="@style/main_activity_top_button"
         android:text="指令内容"
         android:layout_weight="4"/>

     <TextView
         style="@style/main_activity_top_button"
         android:text="正/异常"
         android:layout_weight="3"/>

     <TextView
         style="@style/main_activity_top_button"
         android:text="备注"
         android:layout_weight="6"/>

     <TextView
         style="@style/main_activity_top_button"
         android:text="操作"
         android:layout_weight="3"/>

     <TextView
         style="@style/main_activity_top_button"
         android:text="指令反馈"
         android:layout_weight="1"
         android:id="@+id/textView" />
 </LinearLayout>
    <!--分割线-->
    <View
       android:layout_width="match_parent"
       android:layout_height="2dp"
        android:layout_marginLeft="@dimen/normal_margin10"
        android:layout_marginRight="@dimen/normal_margin10"
       android:background="@color/line_blue"
    />

    <!--已发车辆列表-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_menu_gone_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/normal_margin10"
        android:layout_marginRight="@dimen/normal_margin10"
        />

</LinearLayout>