<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
 <!--已发车辆-->
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@color/transparent"
     android:layout_marginLeft="@dimen/normal_margin10"
     android:layout_marginRight="@dimen/normal_margin10"
     android:minHeight="40dp"
     android:gravity="center"
     android:orientation="horizontal">
     <TextView
         style="@style/main_activity_top_button"
         android:layout_weight="1.8"
         android:text="序号" />

     <TextView
         style="@style/main_activity_top_button"
         android:layout_weight="4.8"
         android:text="车号"
         android:id="@+id/textView4" />

     <TextView
         style="@style/main_activity_top_button"
         android:layout_weight="4"
         android:text="到站时刻" />

     <TextView
         style="@style/main_activity_top_button"
         android:layout_weight="4"
         android:text="计划时刻" />

     <TextView
         style="@style/main_activity_top_button"
         android:layout_weight="4.6"
         android:text="实际发车时刻" />
     <!--新增:停场时间-->
     <TextView
         style="@style/main_activity_top_button"
         android:layout_weight="4"
         android:text="停场时间" />

     <TextView
         style="@style/main_activity_top_button"
         android:layout_weight="4.6"
         android:text="发车间隔" />

     <TextView
         style="@style/main_activity_top_button"
         android:layout_weight="3.1"
         android:text="驾驶员" />

     <TextView
         android:id="@+id/tv_menu_steward_gone"
         style="@style/main_activity_top_button"
         android:layout_weight="3"
         android:text="乘务员"
         android:visibility="gone" />

     <TextView
         style="@style/main_activity_top_button"
         android:layout_weight="4"
         android:text="指令内容" />

     <TextView
         style="@style/main_activity_top_button"
         android:layout_weight="3.1"
         android:text="正/异常" />

     <TextView
         style="@style/main_activity_top_button"
         android:layout_weight="3.8"
         android:text="备注" />

     <TextView
         style="@style/main_activity_top_button"
         android:layout_weight="3.5"
         android:text="操作" />

     <TextView
         android:id="@+id/textView"
         style="@style/main_activity_top_button"
         android:layout_weight="3"
         android:text="指令反馈" />
 </LinearLayout>
    <!--分割线-->
    <View
       android:layout_width="match_parent"
       android:layout_height="2dp"
        android:layout_marginLeft="@dimen/normal_margin10"
        android:layout_marginRight="@dimen/normal_margin10"
       android:background="@color/line_blue"
    />

    <!--已发车辆列表-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_menu_gone_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/normal_margin10"
        android:layout_marginRight="@dimen/normal_margin10"
        />

</LinearLayout>