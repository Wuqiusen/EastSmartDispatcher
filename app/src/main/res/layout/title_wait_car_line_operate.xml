<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="40dp"
    >
    <!--Title_待发车辆/线路营运-->
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="3"
        android:text="序号"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="6"
        android:text="车号"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="2"
        android:text="到站时刻"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="2"
        android:text="计划时刻"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="2"
        android:text="停场时间"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="2"
        android:text="发车间隔"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="4"
        android:text="单/双班"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="3"
        android:text="驾驶员"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="3"
        android:text="乘务员"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="4"
        android:text="应跑单次"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="4"
        android:text="实跑单次"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="4"
        android:text="归属站"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="4"
        android:text="任务类型"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="4"
        android:text="操作"
        />
</LinearLayout>