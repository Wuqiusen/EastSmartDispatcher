<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    >
    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_car_dialog"
        android:paddingBottom="@dimen/normal_margin20"
        android:orientation="vertical">
        <Button
            style="@style/font_dialog_title_style"
            android:text="备注"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dialog_margin30"
            android:gravity="center|left"
            android:text="驾驶员中途有事换班"
            android:textSize="@dimen/font_xhuge"
            android:textColor="@color/font_black"/>

        <Button
            style="@style/btn_dialog_style"
            android:text="关闭"
            />
    </LinearLayout>


</LinearLayout>
