<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="40dp"

    >
  <!--数据Item_待发车辆/线路营运-->

  <!--中间-->
  <LinearLayout
      android:id="@+id/ll_drag_handle"
      android:layout_width="0dp"
      android:layout_weight="6"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <!--序号-->
    <TextView
        android:id="@+id/tv_car_sequence"
        style="@style/font_random_weight_style"
        android:layout_weight="2"
        tools:text="3"
        />
    <!--车号-->
    <TextView
        android:id="@+id/tv_car_code"
        style="@style/font_random_weight_style"
        android:layout_weight="4"
        android:minHeight="30dp"
        android:background="@drawable/ll_stop_car_green_btn_bg"
        android:textColor="@color/font_white"
        tools:text="粤B12345"
        />
  </LinearLayout>
  <!--到站时刻-->
  <TextView
      android:id="@+id/tv_system_enter_time"
        style="@style/font_random_weight_style"
        android:layout_weight="3"
      tools:text="7:00"
      />
  <!--计划时刻-->
  <TextView
      android:id="@+id/tv_plan_time"
        style="@style/font_random_weight_style"
        android:layout_weight="3"
      tools:text="7:00"
        />
  <!--发车间隔-->
    <TextView
        android:id="@+id/tv_interval_time"
        style="@style/font_random_weight_style"
        android:layout_weight="3"
        tools:text="15"
        />
  <!--单/双班-->
    <TextView
        android:id="@+id/tv_is_double"
        style="@style/font_random_weight_style"
        android:layout_weight="2"
        tools:text="单班"
        />
  <!--驾驶员-->
  <TextView
      android:id="@+id/tv_driver"
        style="@style/font_random_weight_style"
        android:layout_weight="3"
      tools:text="张三"
      />
  <!--乘务员-->
  <TextView
      android:id="@+id/tv_trainman"
        style="@style/font_random_weight_style"
        android:layout_weight="3"
      tools:text="李华"
        />
  <!--应跑单次-->
    <TextView
        android:id="@+id/tv_should_run_count"
        style="@style/font_random_weight_style"
        android:layout_weight="3"
        tools:text="15"
        />
  <!--实跑单次-->
    <TextView
        android:id="@+id/tv_real_run_count"
        style="@style/font_random_weight_style"
        android:layout_weight="3"
        tools:text="15"
        />
  <!--归属站-->
    <TextView
        android:id="@+id/tv_station_name"
        style="@style/font_random_weight_style"
        android:layout_weight="5"
        tools:text="归属站"
        />
  <!--任务类型-->
  <TextView
      android:id="@+id/tv_work_type"
        style="@style/font_random_weight_style"
        android:layout_weight="3"
      tools:text="正在运营"
        />
  <!--操作-->
  <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="6"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_send_car"
        style="@style/font_operate_style"
        android:text="发车"
        />
    <TextView
        android:id="@+id/tv_withdraw"
        style="@style/font_operate_style"
        android:text="撤回"
        />
    <TextView
        android:id="@+id/tv_inform"
        style="@style/font_operate_style"
        android:text="通知"
        />
  </LinearLayout>
</LinearLayout>