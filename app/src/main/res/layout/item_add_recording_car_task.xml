<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="50dp"
    android:orientation="horizontal">
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/background_gray7"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:text="车牌号"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_medium"
        />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:gravity="right"
         android:text="："
         android:textColor="@color/font_black"
         android:textSize="@dimen/font_medium"/>
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/background_gray7"
        android:layout_marginLeft="@dimen/normal_margin10"
        android:layout_marginRight="@dimen/normal_margin10"
        />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:background="@drawable/et_add_recoding"
        android:layout_marginTop="@dimen/margin_fit_6"
        android:layout_marginBottom="@dimen/margin_fit_6"
        android:layout_marginRight="@dimen/normal_margin10"
        />
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/background_gray7"
        />

</LinearLayout>