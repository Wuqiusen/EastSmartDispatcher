<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="40dp"
    >
    <!--Title_已发车辆/营运空驶或非营运空驶(对比一致)-->
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="4"
        android:text="序号"
        />

    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="8"
        android:text="车号"
        />

    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="6.4"
        android:text="到站时刻"
        />

    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="5"
        android:text="计划发车时间"
        />

    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="5"
        android:text="实际发车时间"
        />

    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="5"
        android:text="计划结束时间"
        />

    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="6"
        android:text="任务名称"
        />

    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="4.4"
        android:text="驾驶员"
        />

    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="4.4"
        android:text="乘务员"
        />

    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="6"
        android:text="首发电子围栏名称"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="6"
        android:text="折算单次"
        />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="6"
        android:text="空驶里程" />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="5"
        android:text="正/异常" />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="3"
        android:text="备注" />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="4"
        android:text="操作" />
    <TextView
        style="@style/main_activity_top_button"
        android:layout_weight="6"
        android:text="指令反馈" />

</LinearLayout>