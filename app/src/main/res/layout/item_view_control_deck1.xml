<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical">
        <!--已发车辆-ViewPager-->
        <com.zxw.dispatch.view.CustomViewPager
            android:id="@+id/vp_start_car"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            />
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/line_orange" />
        <!--待发车辆-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:visibility="visible">
            <!--待发车辆图标布局-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_gray5"
                android:minHeight="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ver_wait_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/margin_fit_6"
                    android:drawableLeft="@mipmap/wait_car_icon"
                    android:drawablePadding="2dp"
                    android:paddingLeft="@dimen/margin_tiny"
                    android:text="待发车辆"
                    android:textColor="@color/font_blue3"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold" />

                <include
                    android:id="@+id/ll_tab_ver_wait_car"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:layout_marginLeft="42dp"
                    layout="@layout/ll_tab_ver_wait_car"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/normal_margin20"
                    android:orientation="horizontal">
                    <!--手动发车-->
                    <TextView
                        android:id="@+id/tv_manual"
                        style="@style/btn_send_car_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tv_manual_normal_style"
                        android:gravity="center"
                        android:minHeight="28dp"
                        android:minWidth="60dp"
                        android:text="手动发车" />
                    <!--自动发车-->
                    <TextView
                        android:id="@+id/tv_automatic"
                        style="@style/btn_send_car_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tv_manual_unnormal_style"
                        android:gravity="center"
                        android:minHeight="28dp"
                        android:minWidth="60dp"
                        android:text="自动发车" />

                </LinearLayout>
            </LinearLayout>

            <!--待发车辆-ViewPager-->
            <include
                android:id="@+id/ll_wait_car"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:layout_marginRight="@dimen/margin_tiny"
                android:layout_weight="1"
                layout="@layout/item_vp_wait_car"
                />
        </LinearLayout>
    </LinearLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/line_blue2"
        />
    <!--停场车辆-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:background="@color/background_gray5"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_ver_stop_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_fit_6"
                android:drawableLeft="@mipmap/stop_car_icon"
                android:drawablePadding="2dp"
                android:paddingLeft="@dimen/margin_tiny"
                android:text="停场车辆"
                android:textColor="@color/font_blue3"
                android:textSize="@dimen/font_large"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="40dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_ver_stop_tab1"
                    style="@style/font_menu3"
                    android:background="@drawable/btn_login_style"
                    android:text="待班车辆"
                    android:visibility="visible"
                    />
                <TextView
                    android:id="@+id/tv_ver_stop_tab2"
                    style="@style/font_menu3"
                    android:background="@drawable/whitebtn_dialog_deep_style"
                    android:textSize="@dimen/font_medium"
                    android:textColor="@color/font_black"
                    android:text="收班车辆"
                    android:visibility="visible"
                    />
            </LinearLayout>

            <!--停场车辆-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/normal_margin20"
                android:minHeight="48dp"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!--单班主站-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height12"
                    android:background="@drawable/ll_stop_car_red_btn_bg"
                    android:minWidth="25dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_tiny"
                    android:paddingRight="@dimen/normal_margin10"
                    android:textSize="@dimen/font_medium"
                    android:textColor="@color/font_blue"
                    android:text="本站"
                    />

                <!--单班副站-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height12"
                    android:background="@drawable/ll_stop_car_green_btn_bg"
                    android:minWidth="25dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_tiny"
                    android:textSize="@dimen/font_medium"
                    android:textColor="@color/font_blue"
                    android:text="对站"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/background_gray4"
            android:visibility="gone"/>
        <!--停场车辆-ViewPager-->
        <include
            android:id="@+id/ll_stop_car"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/margin_fit_6"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny"
            layout="@layout/item_vp_stop_car"
            />
    </LinearLayout>


</LinearLayout>