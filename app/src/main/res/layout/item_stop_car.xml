<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <!--停场车辆-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/normal_margin20"
        android:minHeight="48dp"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <!--单班主站-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height12"
            android:background="@drawable/ll_stop_car_red_btn_bg"
            android:minWidth="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_tiny"
            android:paddingRight="@dimen/normal_margin10"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/font_blue"
            android:text="本站"
            />

        <!--单班副站-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height12"
            android:background="@drawable/ll_stop_car_green_btn_bg"
            android:minWidth="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_tiny"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/font_blue"
            android:text="对站"
            />
    </LinearLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/normal_margin10"
        android:layout_marginRight="@dimen/normal_margin10"
        android:background="@color/line_blue"
        />
    <!--停场车辆列表-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_menu_stop_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/normal_margin10"/>
</LinearLayout>