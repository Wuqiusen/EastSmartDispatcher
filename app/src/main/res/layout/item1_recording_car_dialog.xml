<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!--车牌号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small30"
        android:layout_marginRight="@dimen/margin_small30"
        android:orientation="horizontal">
        <TextView
            style="@style/tv_recording_car_dialog_item2"
            android:text="车牌号:"
            />
        <View style="@style/line_dialog_style"/>
        <com.zxw.dispatch.view.smart_edittext.SmartEditText
            android:id="@+id/smartEt_recording_item1_vehicleId"
            style="@style/et_recording_car_dialog_item2"
            android:hint="请输入车牌号"
            />
    </LinearLayout>
    <View style="@style/line_title_bottom_dialog"/>

    <!--驾驶员-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small30"
        android:layout_marginRight="@dimen/margin_small30"
        android:orientation="horizontal">
        <TextView
            style="@style/tv_recording_car_dialog_item2"
            android:text="驾驶员:"
            />
        <View style="@style/line_dialog_style"/>
        <com.zxw.dispatch.view.smart_edittext.SmartEditText
            android:id="@+id/smartEt_recording_item1_driverId"
            style="@style/et_recording_car_dialog_item2"
            android:hint="请输入驾驶员"
            />
    </LinearLayout>
    <View style="@style/line_title_bottom_dialog"/>

    <!--乘务员-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small30"
        android:layout_marginRight="@dimen/margin_small30"
        android:orientation="horizontal">
        <TextView
            style="@style/tv_recording_car_dialog_item2"
            android:text="乘务员:"
            />
        <View style="@style/line_dialog_style"/>
        <com.zxw.dispatch.view.smart_edittext.SmartEditText
            android:id="@+id/smartEt_recording_item1_stewardId"
            style="@style/et_recording_car_dialog_item2"
            android:hint="请输入乘务员"
            />
    </LinearLayout>
    <View style="@style/line_title_bottom_dialog"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small30"
        android:layout_marginRight="@dimen/margin_small30"
        android:orientation="horizontal">
        <TextView
            style="@style/tv_recording_car_dialog_item2"
            android:text="线路编号:"
            />
        <View style="@style/line_dialog_style"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/item1_rv_recording_car"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <View style="@style/line_title_bottom_dialog"/>



</LinearLayout>