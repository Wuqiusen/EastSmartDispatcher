<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="horizontal"
    >
    <!--序号-->
    <TextView
        android:id="@+id/tv_car_sequence"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="1"
        android:layout_weight="2"/>

    <!--车号-->
    <TextView
        android:id="@+id/tv_car_code"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:background="@drawable/ll_stop_car_red_btn_bg"
        android:textColor="@color/font_white"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="粤B03444"
        android:layout_weight="4"/>

    <!--到站时刻-->
    <TextView
        android:id="@+id/tv_arrive_time"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="7:00"
        android:layout_weight="4"/>

    <!--计划时刻-->
    <TextView
        android:id="@+id/tv_plan_time"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="7:00"
        android:layout_weight="4"/>

    <!--实际发车时刻-->
    <TextView
        android:id="@+id/tv_send_time"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="7:00"
        android:layout_weight="5"/>

    <!--发车间隔-->
    <TextView
        android:id="@+id/tv_interval_time"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="25min"
        android:layout_weight="4"/>

    <!--驾驶员-->
    <TextView
        android:id="@+id/tv_driver"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="张三"
        android:layout_weight="3.2"/>

    <!--乘务员-->
    <TextView
        android:id="@+id/tv_trainman"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="李华"
        android:layout_weight="3"
        android:visibility="gone"/>

    <!--任务类型-->
    <TextView
        android:id="@+id/tv_work_status"
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="正在运营"
        android:layout_weight="4"/>

    <!--正/异常-->
    <TextView
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="6dp"
        tools:text="正常"
        android:layout_weight="3.5"/>

    <!--备注-->
    <TextView
        style="@style/content_car_font_main_style"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="10dp"
        tools:text="驾驶员中途"
        android:layout_weight="3.5"/>

    <!--操作-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_check_send_car"
            style="@style/content_car_font_main_style"
            android:layout_width="0dp"
            android:clickable="true"
            android:minWidth="6dp"
            android:text="查看"
            android:textColor="@color/tv_font_blue_color"
            android:layout_weight="1"/>
        <TextView
            style="@style/content_car_font_main_style"
            android:layout_width="0dp"
            android:clickable="true"
            android:minWidth="6dp"
            android:text="撤回"
            android:textColor="@color/tv_font_blue_color"
            android:layout_weight="1"
            android:visibility="gone"/>

    </LinearLayout>

    <!--指令反馈-->
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minWidth="6dp"
        android:src="@drawable/feedback_icon"
        android:layout_weight="2"/>


