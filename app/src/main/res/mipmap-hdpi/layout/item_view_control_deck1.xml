<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.2"
        android:orientation="vertical">
        <!--已发车辆-ViewPager-->
        <com.zxw.dispatch.view.ChildViewPager
            android:id="@+id/vp_start_car"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            />
        <!--分割线-->
        <View style="@style/line_orange"/>
        <!--待发车辆图标布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_gray5"
            android:minHeight="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ver_wait_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/margin_fit_6"
                android:drawableLeft="@mipmap/wait_car_icon"
                android:drawablePadding="2dp"
                android:paddingLeft="@dimen/margin_tiny"
                android:text="待发车辆"
                android:textColor="@color/font_blue3"
                android:textSize="@dimen/font_large"
                android:textStyle="bold" />

            <include
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                layout="@layout/ll_tab_ver_wait_car"
                android:visibility="visible"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:layout_marginRight="@dimen/normal_margin20"
                android:orientation="horizontal">
                <!--手动发车-->
                <TextView
                    android:id="@+id/tv_manual"
                    style="@style/btn_manual_send_car_style"
                    android:visibility="gone"
                    android:text="手动发车" />
                <!--自动发车-->
                <TextView
                    android:id="@+id/tv_automatic"
                    style="@style/btn_automatic_send_car_style"
                    android:visibility="gone"
                   android:text="自动发车" />

            </LinearLayout>
        </LinearLayout>
            <!--待发车辆-ViewPager-->
            <include
                layout="@layout/item_vp_wait_car"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:layout_marginRight="@dimen/margin_tiny"
                />
    </LinearLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/line_blue2"
        />
    <!--停场车辆标题-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:background="@color/background_gray5"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_ver_stop_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_fit_6"
            android:drawableLeft="@mipmap/stop_car_icon"
            android:drawablePadding="2dp"
            android:paddingLeft="@dimen/margin_tiny"
            android:text="停场车辆"
            android:textColor="@color/font_blue3"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ver_stop_tab1"
                style="@style/font_is_click_operate_tab"
                android:text="待班车辆"
                />
            <TextView
                android:id="@+id/tv_ver_stop_tab2"
                style="@style/font_not_click_operate_tab"
                android:text="收班车辆"
                />
        </LinearLayout>

        <!--停场车辆-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/normal_margin10"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--本站-->
            <Button
                style="@style/btn_dui_red_station"
                />
            <TextView
                style="@style/tv_dui_station"
                android:text="本站"
                />

            <!--对站-->
            <Button
                style="@style/btn_dui_green_station"
                />
            <TextView
                style="@style/tv_dui_station"
                android:text="对站"
                />
        </LinearLayout>
    </LinearLayout>

    <com.zxw.dispatch.view.ChildViewPager
        android:id="@+id/vp_stop_car"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginTop="@dimen/margin_fit_6"
        android:layout_marginLeft="@dimen/margin_tiny"
        android:layout_marginRight="@dimen/margin_tiny"
        />
</LinearLayout>