                      android:id="@+id/rb_no_work_mission"
                      style="@style/rb_task_type_dialog_style"
                      android:text="非营运任务"
                      />

              <!--</LinearLayout>-->
              <View style="@style/line_task_type_dialog_style"/>

              <android.support.v7.widget.RecyclerView
                  android:id="@+id/rv_no_work_mission"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

              </android.support.v7.widget.RecyclerView>
          </LinearLayout>

      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_confirm"
                style="@style/bluebtn_dialog_style"
                android:text="确定"
                />
            <Button
                android:id="@+id/btn_cancel"
                style="@style/whitebtn_dialog_style"
                android:text="取消"
                />
        </LinearLayout>
    </LinearLayout>


